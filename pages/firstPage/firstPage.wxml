<!--pages/firstPage/firstPage.wxml-->
<view class="myContainer">
  <view class="myPage">
  
    <view style="background-color:white;width:100%;display:flex;flex-direction:column;justify-content:center;align-items:center;">
      <view class="split_x"></view><!--我是分割器-->
      <!--轮转图片-->
      <view style='width:700rpx;'>
        <swiper indicator-dots="true" autoplay="true" interval="2000" duration="490" style='width:700rpx;height:451rpx'>
          <view  wx:for="{{imageUrls}}" wx:key="{{item}}">
          <swiper-item>
            <image src="{{item}}"   style='width:700rpx;' />
          </swiper-item>
          </view>
        </swiper>
      </view><!--轮转图片-->

      <view class="split_x"></view><!--我是分割器-->
      <!--公司名称、位置、导航-->
      <view style='display:flex;flex-direction:row;justify-content:space-around;width:100%;'>
        <view style="display:flex;flex-direction:column;justify-content:space-around;">
          <view class="font-size-xl">北京暿艺东方艺术</view>
          <view class="font-size-ss font-color-grey" >北京市朝阳区东四环中路78号-大成国际中心A2座-1211</view>
        </view>
        <view  bindtap="locationNavi" >
          <view style="display:flex;flex-direction:column;align-items:center;">
            <view style="">
              <image style="width: 50rpx; height: 50rpx;"  src="../../utils/image/location.png"></image>
            </view>
            <view class="font-size-ss">导航到店</view>
          </view>
        </view>
      </view><!--公司名称、位置、导航-->

      <view class="split_xx"></view>

      <!--四个横向的图标菜单-->
      <view class='icon-menu'>
        <view >
          <navigator url="/pages/artTroupe/artTroupe" hover-class="navigator-hover">
            <view><image  class='menu-image'  src="../../utils/image/choicest.png"></image></view>
            <view class='font-size-m'>艺术团</view>
          </navigator>
        </view>
        <view >
          <navigator url="/pages/trainAgency/trainAgency" hover-class="navigator-hover">
            <view><image  class='menu-image'   src="../../utils/image/courseTable.png"></image></view>
            <view class='font-size-m'>培训部</view>
          </navigator>
        </view>
        <view >
          <navigator url="/pages/teachers/teacherArtistCata/teacherArtistCata" hover-class="navigator-hover">
            <view><image class='menu-image'   src="../../utils/image/teacher.png"></image></view>
            <view class='font-size-m'>教员艺人</view>
          </navigator>
        </view>
        <view >
          <navigator url="/pages/videoRealCap/videoCategory/videoCategory" hover-class="navigator-hover">
            <view><image  class='menu-image'   src="../../utils/image/video.png"></image></view>
            <view class='font-size-m'>视频实录</view>
          </navigator>
        </view>
      </view><!--四个横向的图标菜单-->
    </view>
    <view class="split_xx"></view>
    <!--视频实录标头-->
    <view style='display:flex;justify-content:space-between;' class="downSection">
      <view style='display:flex;align-items:center;'>
        <view style='width:10rpx;background-color:green;height:38rpx;margin-right:20rpx;'></view>
        <view>精品课程</view>
      </view>
      <view class="font-size-s font-color-grey" ><navigator url="/pages/videoRealCap/videoCategory/videoCategory" hover-class="navigator-hover">更多 ></navigator></view>
    </view><!--视频实录标头-->
    <view style="height:10rpx;"></view>

    <!--视频1-->
    <view wx:for="{{fineCourseList}}" wx:key="{{item.cId}}">
      <view class='downSection video-box' >
        <video class="video" src="{{resourceUrl}}{{item.cVal}}"
                  controls='true' poster="{{remoteUrl}}{{videoImage}}">
        </video>
        <view class="split_ss"></view>
        <view class="text-box">
          <view class="two-line-text">
            <view class="font-size-xl" style=''>舞蹈师范课程</view>
            <view class="font-size-l" style='color:grey;'><text class="text-overflow">舞蹈师范课程舞蹈师范课程舞蹈师范课程舞蹈师范课程舞蹈师范课程舞蹈师范课程
              </text>
            </view>
          </view>
        </view>
      </view><!--视频1-->
      <view class="split_m"></view>
    </view>
  <view bindtap='bindtapdianhua'>
  <navigator url="/pages/contactUs/contactUs" hover-class="navigator-hover">
    <image  class="addIcon" src="http://localhost:8080/resources/system/redCustomServ.png"></image>
  </navigator>
  </view>

  </view><!-- myPage-->
</view><!-- myContainer-->