<!--pages/teachers/teacherDetail/teacherDetail.wxml-->
<view class="myContainer">
  <view class="myPage">
    <view style='display:flex;flex-direction:column;align-items:center;'>
      <view style='background-color:#00CED1;height:50rpx;width:100%;'></view>

      <view style='display:flex;flex-direction:column;justify-content:space-around;align-items:center;background-color:white;height:350rpx;width:680rpx;margin-top:-30rpx;border-top-left-radius:10rpx;border-top-right-radius:10rpx;'>
        <view style='align-self:flex-end;display:flex;flex-direction:column;align-items:center;margin-right:20rpx;'>
          <image src='/utils/image/share.svg' style='width:40rpx;height:40rpx;'></image>
          <view class='main-color-front font-size-s' >推荐TA</view>
        </view>
        <view style='display:flex;flex-direction:column;justify-content:flex-end;align-items:center;margin-top:-80rpx;'>
          <image src="{{teacherArtistOutline.cHeadportrait}}" style='align-self:center;width:150rpx;height:150rpx;border-radius:300rpx;margin-right:20rpx;'></image>      
          <view class="font-size-l font-color-grey" style='margin-top:20rpx;'>{{teacherArtistOutline.cTitle}}</view>
          <view  class="font-size-xl" style='margin-top:10rpx;'>{{teacherArtistOutline.cSubtitle}}</view>
        </view>
      </view>
      <view class="split_ss"></view><!--我是分割器-->

      <!--两个按钮-->
      <view style='display:flex;align-items:center;justify-content:space-around;background:white;width:680rpx;height:100rpx;border-bottom-left-radius:10rpx;border-bottom-right-radius:10rpx;'>
        <view class="{{selected?'red':'default'}}" bindtap="selected">老师简介</view>
        <view class="{{selected1?'red':'default'}}" bindtap="selected1">主授课程</view>
      </view><!--两个按钮-->

      <view class="split_m"></view><!--我是分割器-->

      <view style='background:white;width:680rpx;border-radius: 15rpx;'>
        <view class="{{selected?'show':'hidden'}} font-size-l" ><!--文字或者图片-->
          <view   
              style='display:flex;flex-direction:column;align-items:center;justify-content:center;text-align: left;'>
            <view wx:for="{{teacherArtistTxtImgContent}}">
              <view wx:if="{{item.cType=='txt'}}" style='padding:30rpx;text-indent: 2em;'>{{item.cContent}}</view>
              <image wx:if="{{item.cType=='img'}}"
            mode="aspectFit"   src="{{item.cContent}}"
                ></image>
            </view>
          </view>
        </view>

        <view class="{{selected1?'show':'hidden'}}"><!--视频-->
          <view  wx:for="{{teacherArtistVideoContent}}">
          <!--课程内容-->
            <view  style='border-radius: 15rpx;display:flex;justify-content:flex-start;background-color:white;'>
              <view>
              <image src="https://www.liyang024.top/resources/dance2.jfif" style='width:300rpx;height:200rpx;border-radius: 10rpx;margin:20rpx 20rpx;' ></image></view>
              <view style='margin:20rpx 20rpx;display:flex;flex-direction:column;justify-content:space-between;width:420rpx;'><!--2-->
                <view class="font-size-l" style='font-weight:bold;'>{{item.cDes1}}</view>
                <view class="font-size-ss font-color-grey">{{item.cDes2}}</view>
                <view style='display:flex;flex-direction:row;justify-content:space-between;align-items:center;'><!--1-->
                  <view class="font-size-s font-color-grey" ></view>
                  <view class="font-size-s" style='background-color:#009933;color:white;padding:15rpx 30rpx;border-radius: 15rpx;'>预约试听</view>
                </view><!--1-->
              </view><!--2-->
            </view><!--课程内容-->
            <view class="split_m" style='background-color:#eeeeee;'></view><!--我是分割器-->
          </view>
        </view>
      </view>


    </view>
  </view>
</view>
